<div class="form-wrap">
  <form class="pure-form pure-form-aligned" method="post" action="/signup">
    <fieldset>

      <legend>Sign Up</legend>

      <input class="pure-input-1" type="text" name="username" placeholder="Username">
      <input class="pure-input-1" type="password" name="password" placeholder="Password">

      <input class="pure-input-1" type="password" name="password2" placeholder="Repeat Password">

      <div class="pure-controls">
        <button type="submit" class="pure-button pure-button-primary green-button">Create Account</button>
      </div>
      
    </fieldset>
  </form>
</div>
